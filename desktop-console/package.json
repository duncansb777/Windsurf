{
  "name": "agentic-control-console",
  "version": "0.1.0",
  "description": "Desktop wrapper for Agentic Control Console demo",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.agenticcontrolconsole",
    "productName": "Agentic Control Console",
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "..",
        "to": ".",
        "filter": [
          "agentic-control-demo.html"
        ]
      },
      {
        "from": "build",
        "to": ".",
        "filter": [
          "Unquarantine.command",
          "README.txt"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "artifactName": "Agentic-Control-Console-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        { "path": "build/Unquarantine.command", "x": 120, "y": 360 },
        { "path": "build/README.txt", "x": 120, "y": 470 },
        { "path": "/Applications", "type": "link", "x": 420, "y": 200 }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
